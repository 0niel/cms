{
  "kind": "collectionType",
  "collectionName": "stories",
  "info": {
    "name": "Story",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 40
    },
    "pages": {
      "type": "component",
      "repeatable": true,
      "component": "stories.story-component",
      "required": true,
      "min": 1,
      "max": 12
    },
    "stop_show_date": {
      "type": "date",
      "required": true
    },
    "preview": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "author": {
      "model": "author"
    }
  }
}
